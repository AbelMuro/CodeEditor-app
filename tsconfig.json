{
    "compilerOptions": {
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["*"],
            "!/*": ["Pages/Home/*"]            //this will resolve to ./src/Pages/Home/*
        }  
    },
        "include": ["src", "global.d.ts"]
}